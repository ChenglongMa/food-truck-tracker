<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="suggestion_switch"
        android:summary="@string/pref_description_suggestion_switch"
        android:title="@string/pref_title_suggestion_switch" />

    <EditTextPreference
        android:defaultValue="5"
        android:inputType="numberDecimal"
        android:key="suggestion_interval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_suggestion_item" />

</PreferenceScreen>
